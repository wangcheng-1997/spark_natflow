<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.zjtuojing.natflow</groupId>
  <artifactId>spark-natflow</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <resources>
      <resource>
        <targetPath>/BOOT-INF/lib/</targetPath>
        <directory>lib</directory>
        <includes>
          <include>**/*.jar</include>
        </includes>
      </resource>
    </resources>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>net.alchim31.maven</groupId>
          <artifactId>scala-maven-plugin</artifactId>
          <version>3.2.2</version>
        </plugin>
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>3.5.1</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>scala-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>scala-compile-first</id>
            <phase>process-resources</phase>
            <goals>
              <goal>add-source</goal>
              <goal>compile</goal>
            </goals>
          </execution>
          <execution>
            <id>scala-test-compile</id>
            <phase>process-test-resources</phase>
            <goals>
              <goal>testCompile</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <executions>
          <execution>
            <phase>compile</phase>
            <goals>
              <goal>compile</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <source>8</source>
          <target>8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>tuojing</id>
      <url>http://maven.zjtuojing.com:38081/nexus/content/repositories/snapshots/</url>
    </repository>
    <repository>
      <id>cloudera</id>
      <url>https://repository.cloudera.com/artifactory/cloudera-repos/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>local</groupId>
      <artifactId>3</artifactId>
      <version>2.8</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/lib/hbase-hadoop-compat-1.2.3.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>local</groupId>
      <artifactId>4</artifactId>
      <version>2.8</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/lib/hbase-procedure-1.2.3.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>local</groupId>
      <artifactId>5</artifactId>
      <version>2.8</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/lib/hbase-protocol-1.2.3.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>local</groupId>
      <artifactId>7</artifactId>
      <version>2.8</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/lib/hbase-thrift-1.2.3.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>local</groupId>
      <artifactId>8</artifactId>
      <version>2.8</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/lib/hadoop-annotations-2.7.1.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>local</groupId>
      <artifactId>9</artifactId>
      <version>2.8</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/lib/hadoop-auth-2.7.1.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>local</groupId>
      <artifactId>10</artifactId>
      <version>2.8</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/lib/hadoop-common-2.7.1.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>local</groupId>
      <artifactId>11</artifactId>
      <version>2.8</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/lib/guava-12.0.1.jar</systemPath>
    </dependency>
  </dependencies>
</project>

